{
  "name": "Java Dev Container",
  "dockerComposeFile": ["../docker-compose.dev.yaml"],
  "service": "app",
  "workspaceFolder": "/app",
  "settings": {
    "java.configuration.runtimes": [
      {
        "name": "JavaSE-21",
        "path": "/usr/lib/jvm/java-21-openjdk"
      }
    ]
  },
  "extensions": [
    "vscjava.vscode-java-pack",
    "mhutchie.git-graph",
    "ms-azuretools.vscode-docker"
  ],
  "remoteUser": "root",
  "customizations": {
    "jetbrains": {
      "settings": {
        "com.intellij:app:BuiltInServerOptions.builtInServerPort": 52163,
        "com.intellij:app:HttpConfigurable.use_proxy_pac": true
      }
    }
  }
}
